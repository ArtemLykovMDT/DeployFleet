{
  "name": "fleet-deploy-ops",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:desktop": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "start:desktop": "electron .",
    "build:desktop": "vite build && electron-builder --win --x64"
  },
  "dependencies": {
    "@google/genai": "latest",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.fleet.deploy.ops",
    "productName": "Fleet Deploy Ops",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "scripts",
        "to": "scripts"
      },
      {
        "from": ".env.local",
        "to": ".env.local"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
